{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/client-ts/node_modules/jasmine/bin/jasmine.js",
            "args": ["JASMINE_CONFIG_PATH=${workspaceRoot}/client-ts/Microsoft.AspNetCore.SignalR.Client.TS.Tests/jasmine.json"],
            "cwd": "${workspaceRoot}/client-ts",
            "outFiles": []
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "address": "localhost",
            "port": 5858,
            "outFiles": []
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest - Current File",
            "program": "${workspaceFolder}/clients/ts/common/node_modules/jest/bin/jest",
            "cwd": "${workspaceFolder}/clients/ts",
            "args": [
                "${relativeFile}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}